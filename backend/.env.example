# Backend Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dashwright
DB_PASSWORD=changeme
DB_DATABASE=dashwright

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Storage Configuration (S3-compatible)
# Works with MinIO, AWS S3, Scaleway Object Storage, DigitalOcean Spaces, Backblaze B2, etc.

# S3 Endpoint URL (leave empty for AWS S3)
# The region is already included in the endpoint for S3-compatible providers
# Examples:
#   MinIO (local): http://localhost:9000
#   AWS S3: (empty - uses AWS default endpoints)
#   Scaleway: https://s3.fr-par.scw.cloud (region: fr-par)
#   DigitalOcean: https://nyc3.digitaloceanspaces.com (region: nyc3)
STORAGE_ENDPOINT=http://localhost:9000

# AWS Region (only needed for AWS S3, ignored for S3-compatible providers)
STORAGE_REGION=us-east-1

# S3 Access credentials
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=dashwright-artifacts

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10
