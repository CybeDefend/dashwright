# Example environment variables for Scaleway S3 configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_USERNAME=dashwright
DB_PASSWORD=changeme
DB_DATABASE=dashwright

# JWT Configuration (REQUIRED - Generate secure keys!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Scaleway S3 Configuration
SCALEWAY_ACCESS_KEY=SCWXXXXXXXXXXXXXXXXX
SCALEWAY_SECRET_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
STORAGE_BUCKET=dashwright-artifacts

# Scaleway Endpoint (region is already in the URL)
# Choose your region:
SCALEWAY_ENDPOINT=https://s3.fr-par.scw.cloud    # Paris, France
# SCALEWAY_ENDPOINT=https://s3.nl-ams.scw.cloud  # Amsterdam, Netherlands
# SCALEWAY_ENDPOINT=https://s3.pl-waw.scw.cloud  # Warsaw, Poland

# Optional Configuration
STORAGE_LIMIT_GB=100
CORS_ORIGIN=http://localhost:3007
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10
